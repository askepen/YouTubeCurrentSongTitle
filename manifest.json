{
  "manifest_version": 2,
  "name": "YouTube Current Song Title",
  "version": "1.0",

  "description": "When listening to a full album or a mix, it adds the current song being played to the title of the YouTube video.",

  "icons": {
    "32": "icons/icon-32.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["youtube-track-title.js"]
    }
  ],

  "web_accessible_resources": [
    "images/next.png",
    "images/next_hover.png",
    "images/next_down.png",
    "images/prev.png",
    "images/prev_hover.png",
    "images/prev_down.png"
  ]
}
